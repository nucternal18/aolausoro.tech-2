{
  "compilerOptions": {
    "target": "ES2022",
    "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@lib/*": ["lib/*"],
      "@context/*": ["context/*"],
      "@models/*": ["models/*"],
      "@config/*": ["config/*"],
      "@app/*": ["app/*"],
      "@types/*": ["types/*"],
      "@public/*": ["public/*"],
      "@utils/*": ["utils/*"],
      "@src/*": ["src/*"]
    },
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.js",
    ".eslintrc.js",
    "jest.config.js",
    "cypress/integration/aolausoro-tech/home.spec.js",
    ".next/types/**/*.ts",
    "tailwind.config.js",
    "postcss.config.js",
    "next-sitemap.config.js",
    "types/**/*.d.ts",
    "di/modules"
  ],
  "exclude": ["node_modules"],
  "typeRoots": ["node_modules/@types", "./types/**.d.ts"]
}
